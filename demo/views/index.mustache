<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>express-c â€¢ TodoMVC</title>
		<link rel="stylesheet" href="demo/public/base.css">
		<link rel="stylesheet" href="demo/public/index.css">
		<link rel="stylesheet" href="demo/public/app.css">
	</head>
	<body>
		<section class="todoapp">
			<header class="header">
				<h1>todos</h1>
				<form method='POST' action='/todo'>
					<input class="new-todo" name='title' placeholder="What needs to be done?" autofocus>
				</form>
			</header>
			{{^noTodos}}
			<section class="main">
				<input id="toggle-all" class="toggle-all" type="checkbox">
				<label for="toggle-all">Mark all as complete</label>
				<ul class="todo-list">
          {{#todos}}
            {{> todo}}
          {{/todos}}
				</ul>
			</section>
			{{/noTodos}}
			{{^noTodos}}
			<footer class="footer">
				<span class="todo-count"><strong>{{uncompletedCount}}</strong> item{{^hasUncompletedSingular}}s{{/hasUncompletedSingular}} left</span>
				<ul class="filters">
					<li>
						<a class="{{filterAll}}" href="/">All</a>
					</li>
					<li>
						<a class="{{filterActive}}"href="?filter=active">Active</a>
					</li>
					<li>
						<a class="{{filterCompleted}}" href="?filter=completed">Completed</a>
					</li>
				</ul>
				{{#hasCompleted}}
				<form action="/todo_clear_all_completed" method="POST">
					<button class="clear-completed">Clear completed</button>
				</form>
				{{/hasCompleted}}
			</footer>
			{{/noTodos}}
		</section>
		<footer class="info">
			<p>Created by <a href="https://williamcotton.com">William Cotton</a></p>
			<p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
		</footer>
	</body>
</html>
